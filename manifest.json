{
    "name": "Yourls",
    "id": "yourls",
    "packaging_format": 1,
    "description": {
        "en": "An URL shortening service",
        "fr": "Un service de raccourcisseur d'url"
    },
    "version": "1.0",
    "url": "https://github.com/YOURLS/YOURLS",
    "license": "free",
    "maintainer": {
        "name": "Anmol Sharma",
        "email": "anmol@datamol.org",
        "url": ""
    },
    "requirements": {
        "yunohost": ">= 2.7.2"
    }, 
    "previous_maintainers": {
        "name": "courgette",
        "email": "courgette@farcie.fr",
        "url": "http://thomaslebeau.fr"
        },
    "multi_instance": true,
    "services": [
        "nginx",
        "php5-fpm",
        "mysql"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain for Yourls",
                    "fr": "Choisissez un domaine pour Yourls"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Yourls",
                    "fr": "Choisissez un chemin pour Yourls"
                },
                "example": "/yourls",
                "default": "/yourls"
            },
            {
                "name": "admin",
                "type": "admin",
                "ask": {
                    "en": "Choose a Yourls administrator (can be other then YunoHost registered user)",
                    "fr": "Administrateur du site Yourls"
                },
                "example": "yoda"
            },
            {
                "name": "password",
                "type": "password",
                "ask": {
                    "en": "Password for the admin account (At least 6 characters long)",
                    "fr": "Administrateur password (At least 6 characters long)"
                },
                "example": "Strong password"
            }

        ]
    }
}
